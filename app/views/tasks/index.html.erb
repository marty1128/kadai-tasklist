<h1>タスク一覧</h1>
<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.name %></p>
<% end %>

<% @tasks.each do |task| %>
 <p><%= link_to task.id, task %> <%= task.status %> &gt; <%= task.content %></p>
   <% if current_user == task.user %>
    <%= link_to "タスクの削除", task, method: :delete, data: { confirm: "You sure?" }, class: 'btn' %>
   <% end %>
 <% end %>

<p></p>
<%= link_to '新規タスクの作成', new_task_path %>
<%= link_to 'Logout', logout_path, method: :delete %>